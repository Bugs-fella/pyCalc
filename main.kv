<Button>:
    font_size: 60
    background_normal: ""
    background_color: (0, 0, 0, .6)
    font_name: "subway" 

<TextInput>:
    disabled: True
    hint_text: "0"
    halign: "left"
    text_size: self.size
    font_name: "subway"
    multiline: False

<MyLayout>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: (.1, .1, .1, .1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        
        TextInput:
            id: output
            size_hint_y: .3
            font_size: 70

        BoxLayout:
            size_hint_y: .1
            spacing: 2
            TextInput:
                id: input
                font_size: 30
                halign: "right"

            Button:
                text: "x"
                size_hint_x: .1
                font_size: 42
                color: (.9, .8, .7, 1)
                on_press: root.btn_press(self)

        BoxLayout:
            padding: 20
            spacing: 5
            orientation: "vertical"

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: .1
                Button:
                    text: "+"
                    on_press: root.btn_press(self)
                    
                Button:
                    text: "-"
                    on_press: root.btn_press(self)   

            BoxLayout:
                orientation: "horizontal"

                BoxLayout:
                    orientation: "vertical"

                    Button:
                        text: "0"
                        on_press: root.btn_press(self)

                    Button:
                        text: "1"
                        on_press: root.btn_press(self)

                    Button:
                        text: "2"
                        on_press: root.btn_press(self)

                    Button:
                        text: "3"
                        on_press: root.btn_press(self)

                    Button:
                        text: "4"
                        on_press: root.btn_press(self)

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        orientation: "horizontal"

                        Button:
                            text: "."
                            on_press: root.btn_press(self)

                        Button:
                            text: "*"
                            on_press: root.btn_press(self)

                    Button:
                        text: "="
                        color: (0, .6, .6, .8)
                        on_press: root.btn_press(self)

                    BoxLayout:
                        orientation: "horizontal"

                        Button:
                            text: "5"
                            on_press: root.btn_press(self)

                        Button:
                            text: "6"
                            on_press: root.btn_press(self)

                BoxLayout:
                    orientation: "vertical"

                    Button:
                        text: "C"
                        color: (1, 0, 0, 1)
                        on_press: root.btn_press(self)

                    Button:
                        text: "/"
                        on_press: root.btn_press(self)

                    Button:
                        text: "9"
                        on_press: root.btn_press(self)

                    Button:
                        text: "8"
                        on_press: root.btn_press(self)

                    Button:
                        text: "7"
                        on_press: root.btn_press(self)
